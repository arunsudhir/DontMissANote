extends layout

block content
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          a.navbar-brand(href='#') Don&apos;t Miss A Note
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right             
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                img.profile-pic(src='#{SignedInUserPic}', alt='Profile pic' no-repeat;)
                &nbsp;&nbsp;&nbsp;!{SignedInUser}
                span.caret
              ul.dropdown-menu(role='menu')
                li
                 center
                  button.btn.btn-danger(type='submit', id='loginButton') Sign Out 
    .jumbotron
      #keywordsCon.container
        form.form-signin
          h4.form-signin-heading Please enter the keywords that you want us to look for
              br
              br
              .input-group
                 input#keywordText.form-control(type='text', placeholder='Please enter a keyword', aria-describedby='basic-addon1')
                 span.input-group-btn
                     button#addKeywordBtn.btn.btn-default(type='button') +
              // List group
              ul#keywordList.list-group
                li#li0.list-group-item.list-group-item.active(style='display:block') Keywords added so far:
                li#li1.list-group-item.Keyword-list(style='display:block') 
                    span.li1Text Keyword1
                    span.alert_buttons
                     span.delete_button.alert_button(tabindex='0', title='Delete', role='button')
                li#li2.list-group-item.Keyword-list(style='display:none')
                  span.li2Text Keyword2
                  span.alert_buttons
                   span.delete_button.alert_button(tabindex='0', title='Delete', role='button')
                li#li3.list-group-item.Keyword-list(style='display:none')
                  span.li3Text Keyword3
                  span.alert_buttons
                   span.delete_button.alert_button(tabindex='0', title='Delete', role='button')
                li#li4.list-group-item.Keyword-list(style='display:none')
                  span.li4Text Keyword4
                  span.alert_buttons
                   span.delete_button.alert_button(tabindex='0', title='Delete', role='button')
                li#li5.list-group-item.Keyword-list(style='display:none')
                  span.li5Text Keyword5
                  span.alert_buttons
                   span.delete_button.alert_button(tabindex='0', title='Delete', role='button')
                li#li6.list-group-item.Keyword-list(style='display:none')
                  span.li6Text Keyword6
                  span.alert_buttons
                   span.delete_button.alert_button(tabindex='0', title='Delete', role='button')
        center
         #containerActive
          progress.progress-striped.active
           .bar(style='width: 0%;')
          p Please sip your cup of coffee while we look for the relevant notes... We promise this won&apos;t take long
        form(id="createExamples" name="createExamples", method="post") 
         button(type="submit", name="submit", value="email" disabled) Send mail
         br
         button(type="submit", name="submit", value="getNotebooks" ) Get all notebooks
         br
         button(type="submit", name="submit", value="getNotebooksWithExpand" ) Get all notebooks with sections and pages
         br
         button(type="submit", name="submit", value="getSharedPages" ) Get all pages that are shared
         br
         button(type="submit", name="submit", value="getLastDayPageMetadata" ) Get metadata for pages edited in the last day
         br
         button(type="submit", name="submit", value="signOut", style='visibility:hidden', id='signout')
         br
         button(type="submit", name="submit", value="getTermMetadata") Get term metadata for "disney" and "hackaton" terms
         br
        script(src="/javascripts/query.js")